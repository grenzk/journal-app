<%= simple_form_for [category, line_item_date, line_item],
                    html: { class: 'form line-item line-item--form' } do |f| %>
  <%= form_error_notification(line_item) %>

  <%=
    f.input :name,
        wrapper_html: {
          class: 'line-item__name'
        },
        input_html: {
          autofocus: true
        }
  %>
  <%= f.input :description, wrapper_html: { class: 'line-item__description' } %>

  <div class="line-item__actions">
    <%= link_to 'Cancel', category_path(category), class: 'btn btn--light' %>
    <%= f.submit class: 'btn btn--secondary' %>
  </div>
<% end %>

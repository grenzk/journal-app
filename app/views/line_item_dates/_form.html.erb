<%= simple_form_for [category, line_item_date], html: { class: "form line-item-date" } do |f| %>
  <% if line_item_date.errors.any? %>
    <div class="error-message">
      <%= form_error_notification(line_item_date) %>
    </div>
  <% end %>

  <%= f.input :date, html5: true, input_html: { autofocus: true } %>
  <%= link_to 'Cancel', category_path(category), class: 'btn btn--light' %>
  <%= f.submit class: 'btn btn--secondary' %>
<% end %>

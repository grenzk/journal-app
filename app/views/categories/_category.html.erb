<%= turbo_frame_tag category do %>
  <div class="category">
    <%= link_to category.name, category_path(category), data: { turbo_frame: '_top' } %>
    <div class="category__actions">
      <%=
        button_to 'Delete',
          category_path(category),
          method: :delete,
          class: 'btn btn--light'
      %>
      <%= link_to 'Edit', edit_category_path(category), class: 'btn btn--light' %>
    </div>
  </div>
<% end %>
